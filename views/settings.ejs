<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="description" content="">
    <meta name="format-detection" content="telephone=no">
    <meta name="msapplication-tap-highlight" content="no">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.0/umd/popper.min.js" integrity="sha384-cs/chFZiN24E4KMATLdqdvsezGxaGsi4hLGOzlXwp5UZB1LY//20VyM2taTB4QvJ" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/js/bootstrap.min.js" integrity="sha384-uefMccjFJAIv6A+rW+L4AHf99KvxDjWSu1z9VI8SKNVmz4sk7buKt/6v9KI65qnm" crossorigin="anonymous"></script>
    <script src="https://d3js.org/d3.v7.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <link rel="stylesheet" href="../css/style.css">
  </head>
  <body>
    <div class="header">
      <button id="menu" class="menu-button" tabindex="0" type="button" aria-label="Menu">
        <img src="assets/menu.svg"/>
      </button>
      <button id="close" class="menu-button" tabindex="0" type="button" aria-label="Menu" style="float: right;">
        <img src="assets/close.svg"/>
      </button>
    </div>
    <div id="mySidenav" class="sidenav">
      <a href="#">About</a>
      <a href="#">Services</a>
      <a href="#">Clients</a>
      <a href="#">Contact</a>
    </div>
    <div id="main-page">
      <div class="loading-overlay">
        <div class="loading">
          <span>Loading</span>
          <div></div>
          <div></div>
          <div></div>
        </div>
      </div>
      <div class="row" style="position: relative;">
        <span class="MQText t1">Music Quiz</span>
      </div>
      <div class="row setting-row">
        <div class="col-3"></div>
        <div class="col-3">
            <h6 id="ans-tog-txt">Switch to Free Response</h6>
        </div>
        <div class="col-3">
            <label class="switch">
                <input id="ans-tog" type="checkbox">
                <span class="slider round"></span>
            </label>
        </div>
        <div class="col-3"></div>
      </div>
      <span class="version">v1.0.0</span>
    </div>
    <script src="scripts/cookies.js"></script>
    <script>
    $( document ).ready(function() {
        var ext = [];
        $('#ans-tog').prop('checked', getCookie("ansType") == "true");
        if (getCookie("ansType") == "true") {
            $("#ans-tog-txt").html("Switch to Multiple Choice");
        }
        $('#close').on('click', function clickHandler(e) {
            e.preventDefault();
            window.location.href = 'http://localhost:8000/' + ext.join();
        });
        $('#ans-tog').on('change', function clickHandler() {
            if ($( this ).is(":checked")) {
                setCookie("ansType", true, 365);
                $("#ans-tog-txt").html("Switch to Multiple Choice");
                ext[0] = "?aT=true";
            } else {
                console.log("test");
                setCookie("ansType", false, 365);
                $("#ans-tog-txt").html("Switch to Free Response");
                ext[0] = "?aT=false";
            }
        });
    });
    </script>
  </body>
</html>
